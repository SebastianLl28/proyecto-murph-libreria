extends ../templates/header-index

block styles 
  link(rel="stylesheet", href="/css/dist/login.css")

block contenido
  main.main
    section.section
      form.form(method="POST")
        h1.form__title Find your account
        div.form__inputs
          div.form__container
            label.form__label(for="email") email
            input.form__input#email(type="text", name="email", placeholder="insert your email")
            span.form__decoration
          div.form__links
            a.form__link(href="./register") create new account
            a.form__link(href="./login") Login
            input.form__submit(type="submit", value="Search")
      picture.picture
        img.picture__img(src="/img/logo.png", alt="murph" id="logo")
block scripts
  script(src="/js/login.js") 