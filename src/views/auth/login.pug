extends ../templates/header-index

block styles 
  link(rel="stylesheet", href="/css/dist/login.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")

block contenido
  main.main
    if errors
      div.errors
        each error in errors
            p.errors__message(data-parent=error.path )= error.msg
        img.errors__image(src="/img/flork-basado.gif", alt="")
    section.section
      form.form(method="POST")
        h1.form__title Murph
        div.form__inputs
          div.form__container
            label.form__label(for="email") email
            input.form__input#email(type="text", name="email", placeholder="insert your email" value= user ? user.email : "")
            span.form__decoration
          div.form__container
            label.form__label(for="password") password
            input.form__input#password(type="password", name="password", placeholder="insert your password" )
            span.form__decoration
          div.form__links
            a.form__link(href="./register") create new account
            a.form__link(href="./recover-password") Forgot password?
            input.form__submit(type="submit", value="Login")
      picture.picture
        img.picture__img(src="/img/logo.png", alt="murph" id="logo")
block scripts
  script(src="/js/login.js") 